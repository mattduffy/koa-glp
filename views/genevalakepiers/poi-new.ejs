      submit.addEventListener('click', submitNewPoi)
      async function submitNewPoi(e) {
        e.preventDefault()
        e.stopPropagation()
        const formData = new FormData()
        const poi = await preparePoiData(e)
        console.log('submitting poi', poi)
        const file = prepareNewImage()
