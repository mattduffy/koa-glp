        // const query = `${(result?.name) ? result.name : (result?.fullThoroughfare) ? ' | ' + result.fullThoroughfare : ''}`
        //   + `${(result?.areasOfInterest?.[0]) ? ' | ' + result.areasOfInterest[0] : ''}`
