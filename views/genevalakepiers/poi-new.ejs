            break
          case 'food':
            query = [
              window.mapkit.PointOfInterestCategory.Cafe,
              window.mapkit.PointOfInterestCategory.FoodMarket,
              window.mapkit.PointOfInterestCategory.Restaurant,
            ]
            break
